<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg3"
    android:orientation="vertical"
    android:paddingLeft="90dip" >

    <CheckBox
        android:id="@+id/subAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:paddingTop="20dip"
        android:text="订阅所有"
        android:textColor="#FFFFFF" >
    </CheckBox>

    <CheckBox
        android:id="@+id/subNews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:paddingTop="20dip"
        android:text="南燕新闻"
        android:textColor="#FFFFFF" >
    </CheckBox>

    <CheckBox
        android:id="@+id/subNotification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:paddingTop="20dip"
        android:text="校内公告"
        android:textColor="#FFFFFF" >
    </CheckBox>

    <CheckBox
        android:id="@+id/subCieVideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:paddingTop="20dip"
        android:text="信息学院视频课件"
        android:textColor="#FFFFFF" >
    </CheckBox>

    <CheckBox
        android:id="@+id/subHsbcVideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:paddingTop="20dip"
        android:text="商学院视频课件"
        android:textColor="#FFFFFF" >
    </CheckBox>

    <CheckBox
        android:id="@+id/subStlVideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:paddingTop="20dip"
        android:text="国际法学院视频课件"
        android:textColor="#FFFFFF" >
    </CheckBox>

    <CheckBox
        android:id="@+id/subRenwenVideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:paddingTop="20dip"
        android:text="人文学院视频课件"
        android:textColor="#FFFFFF"
        android:visibility="gone" >
    </CheckBox>

    <CheckBox
        android:id="@+id/subSchoolVideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:paddingTop="20dip"
        android:text="校园视频"
        android:textColor="#FFFFFF" >
    </CheckBox>

    <CheckBox
        android:id="@+id/subLeisureVideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:paddingTop="20dip"
        android:text="休闲视频"
        android:textColor="#FFFFFF" >
    </CheckBox>

    <Button
        android:id="@+id/btn_subsub"
        android:layout_width="150dip"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:text="提交"
        android:textColor="#000000"
        android:textSize="22dip" >
    </Button>

</LinearLayout>